[alias]
    co = checkout
    cm = commit
    lg = log --color --graph --all --abbrev-commit \
        --pretty=format:'%C(yellow)%h%C(auto)%d%Creset %s %Cgreen(%cd) %C(cyan)<%<(12,mtrunc)%an>%Creset'
    st = status -sb

[log]
    date = relative

[user]
    name = Liang-Bo Wang
    email = liang-bo.wang@wustl.edu

[core]
    excludesfile = ~/.gitignore_global
    quotepath = false

[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

[push]
    default = matching

[diff]
    compactionHeuristic = true
[color]
    ui = auto
