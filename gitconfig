[alias]
    co = checkout
    lg = log --color --graph --all --abbrev-commit \
        --pretty=format:'%C(yellow)%h%C(auto)%d%Creset %s %Cgreen(%cd) %C(cyan)<%<(12,mtrunc)%an>%Creset'
    st = status -sb
    difff = -c pager.diff=delta diff
    showw = -c pager.show=delta show

[color]
    ui = auto

[core]
    excludesfile = ~/.gitignore_global
    quotepath = false

[diff]
    compactionHeuristic = true

[log]
    date = relative

[pager]
    # diff = delta
    # log = delta
    # reflog = delta
    # show = delta

[delta]
    syntax-theme = Monokai Extended
    navigate = true

[push]
    default = matching

