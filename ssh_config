StrictHostKeyChecking ask
UseRoaming no
SendEnv LANG LC_*


## Lab servers
Host htcf.wustl.edu htcf
    HostName htcf.wustl.edu
    Port 22
    User liang-bo.wang


Host genomic.wustl.edu genomic
    Hostname genomic.wustl.edu
    User lwang


Host shell.cec.wustl.edu shell
    Hostname shell.cec.wustl.edu
    User liang-bo.wang


# Ding Lab clusters
Host denali lab-cluster
    Hostname 10.22.24.1
    User lwang
    IdentityFile ~/.ssh/id_wustl_rsa

Host katmai
    Hostname 10.22.24.2
    User lwang
    IdentityFile ~/.ssh/id_wustl_rsa

Host ptmportal.liang2.io ptmportal
    Hostname ptmportal.liang2.io
    User lbwang
    IdentityFile ~/.ssh/id_wustl_rsa


## MGI servers
Host mgi gsc
    Hostname ssh-jump-1.gsc.wustl.edu
    User lwang
    UserKnownHostsFile ~/.ssh/mgi_known_hosts
    IdentityFile ~/.ssh/id_wustl_rsa

# General configuration for the MGI servers
Host virtual-workstation1 blade* *.gsc.wustl.edu
    User lwang
    UserKnownHostsFile ~/.ssh/mgi_known_hosts
    IdentityFile ~/.ssh/id_wustl_rsa
