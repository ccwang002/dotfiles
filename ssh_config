    User lwang
    IdentityFile ~/.ssh/id_wustl_rsa
    UserKnownHostsFile ~/.ssh/dinglab_known_hosts

Host katmai katmai.wusm.wustl.edu
    Hostname 10.22.24.2
    User lwang
