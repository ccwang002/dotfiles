    UserKnownHostsFile ~/.ssh/dinglab_known_hosts

Host ptmcosmos.wustl.edu ptmcosmos
    Hostname ptmcosmos.wustl.edu
    User lbwang
    IdentityFile ~/.ssh/id_wustl_rsa
